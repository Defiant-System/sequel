<MenuBar>
	<Menu name="Sequel">
		<Menu name="About Sequel" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Sequel" shell="win -c"/>
	</Menu>
	<Menu name="File">
		<Menu name="New File" click="new-file"/>
		<Menu name="Open File" click="open-file"/>
		<Menu type="divider"/>
		<Menu name="Close File" click="close-file"/>
	</Menu>
	<Menu name="View" for="query-view">
		<Menu name="Run Query" click="execute-query" hotkey="alt+return"/>
		<Menu type="divider"/>
		<Menu name="Toggle Sidebar" click="toggle-sidebar"/>
		<Menu name="Toggle Query View" click="toggle-query-view"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>
</MenuBar>